{
  "manifest_version": 3,
  "name": "MindEchoS",
  "version": "1.0.0",
  "description": "Simple knowledge management with AI",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Knowledge Cards"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "commands": {
    "extract-knowledge": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Extract selected text to a new knowledge card"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}